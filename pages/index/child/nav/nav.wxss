/* pages/index/child/nav/nav.wxss */

.nav {
  display: flex;
  justify-content: space-around;
}

.nav-list {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}

.active {
  color: red;
}

.active text {
  border-bottom: 3px solid red;
}

/* goods */

.goods-container {
  padding: 0 10rpx;
  background-color: #f1f1f1;
}

.goods-box {
  display: flex;
  flex-wrap: wrap;
}

.goods-content {
  flex: 0 0 48%;
  margin: 0 6rpx;
  margin-top: 12rpx;
  padding: 10rpx 0;
  background-color: #fff;
}

.goods-title {
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin: 0 6rpx;
}

.goods-footer {
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}
.goods-footer-right {
  padding: 5rpx;
  border-radius: 20%;
  background-color: #f1f1f1;
}
.red {
  color: red;
}